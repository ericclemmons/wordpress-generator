Vagrant::Config.run do |config|
  config.vm.box       = "lucid32"
  config.vm.box_url   = "http://files.vagrantup.com/lucid32.box"
  config.vm.host_name = "{{deploy.local.web.host}}"

  # Dedicated IP to avoid conflicts (and no port fowarding!)
  config.vm.network :hostonly, "{{deploy.local.web.ip}}"

  # Mount the src folder as NFS for caching & speed
  config.vm.share_folder("v-root", "/vagrant", ".", :nfs => true)

  config.vm.provision :chef_solo do |chef|
    chef.cookbooks_path = ["config/cookbooks", "vendor/cookbooks"]

    chef.add_recipe("{{deploy.local.web.host}}");
  end
end
