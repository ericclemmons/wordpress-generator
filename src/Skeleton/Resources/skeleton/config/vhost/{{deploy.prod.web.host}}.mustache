<VirtualHost *:80>

  ServerName {{deploy.prod.web.host}}

  ServerAlias {{domain}} www.{{domain}}

  DocumentRoot /var/www/{{deploy.prod.web.host}}/current/web

  <Directory />
    Options +FollowSymLinks
    AllowOverride FileInfo Options
    Order allow,deny
    Allow from all
  </Directory>

  LogLevel debug
  ErrorLog /var/log/apache2/{{deploy.prod.web.host}}-error.log
  CustomLog /var/log/apache2/{{deploy.prod.web.host}}-access.log combined

  RewriteEngine On
  RewriteLog /var/log/apache2/{{deploy.prod.web.host}}-rewrite.log
  RewriteLogLevel 0

</VirtualHost>
